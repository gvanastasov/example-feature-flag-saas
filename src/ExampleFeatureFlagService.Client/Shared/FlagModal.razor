@using ExampleFeatureFlagService.Client.Models

@if (ShowModal)
{
    <div class="modal-backdrop">
        <div class="modal">
            <h3>@(EditingFlag!.Id == 0 ? "Add Feature Flag" : "Edit Feature Flag")</h3>

            <label>Name:</label>
            <input type="text" @bind="EditingFlag.Name" />

            <label>Description:</label>
            <textarea @bind="EditingFlag.Description"></textarea>

            <label>Enabled:</label>
            <input type="checkbox" @bind="EditingFlag.IsEnabled" />

            <label>Environment:</label>
            <input type="text" @bind="EditingFlag.Environment" />

            <label>Application:</label>
            <input type="text" @bind="EditingFlag.Application" />

            <button class="btn btn-primary" @onclick="SaveFlag">Save</button>
            <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
        </div>
    </div>
}

@code {
    [Parameter] public bool ShowModal { get; set; }
    [Parameter] public FeatureFlag EditingFlag { get; set; } = new FeatureFlag();
    [Parameter] public EventCallback OnSave { get; set; }

    private void CloseModal() => ShowModal = false;
    private async Task SaveFlag() => await OnSave.InvokeAsync();
}